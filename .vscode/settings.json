{
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": [
        "tests"
    ],
    "jupyter.jupyterCommandLineArguments": [
        "--notebook-dir=/"
    ],
    "jupyter.notebookFileRoot": "${workspaceFolder}",
    "python.linting.ignorePatterns": [
        ".vscode/*.py",
        "**/site-packages/**/*.py",
        "**/artifacts/**/*.py"
    ],
    "python.linting.pylintArgs": [
        "--disable=E265",
        "--disable=C0114",
        "--disable=C0115",
        "--disable=C0116"
    ],
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true
    },
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=100"
    ],
    "python.formatting.provider": "black",
    "python.languageServer": "Pylance",
    "python.analysis.extraPaths": [
        "~/.pyenv/versions/aoc_2022_py3.11/lib/python3.11/site-packages",
        "./src"
    ],
    "python.defaultInterpreterPath": "~/.pyenv/versions/aoc_2022_py3.11/bin/python",
    "editor.rulers": [100],
    "[markdown]": {
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 120,
        "editor.rulers": [120],
        "files.trimTrailingWhitespace": false,
    },
    "cSpell.enableFiletypes": ["markdown", "!python"],
    "isort.path": ["~/.pyenv/versions/aoc_2022_py3.11/bin/isort"]
}
